rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para notificações (somente leitura)
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'juniorfray944@gmail.com';
    }
    
    // Regras para status de leitura de notificações (usuários podem escrever seu próprio status)
    match /userNotifications/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Regras para usuários
    match /artifacts/trade-journal-public/users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para admin users
    match /artifacts/trade-journal-public/adminUsers/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'juniorfray944@gmail.com';
    }
    
    // Regras para trades
    match /artifacts/trade-journal-public/trades/{tradeId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
